<Window x:Class="lb1._2.SecondWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lb1._2"
        mc:Ignorable="d"
        Title="SecondWindow" Height="450" Width="800">
    <Grid>
        <Canvas>
            <Label Name="StateDoor" Content="Двери" Canvas.Left="50"/>
            <Label Name="State" Content="Состояние: " Canvas.Top="20" Canvas.Left="50"/>
            <Label Content="Этаж на который нужно вызвать лифт:" Canvas.Top="40" Canvas.Left="50"/>
            <TextBox Background="#FFC8D0D0" Name="calledFloor" Width="100" Canvas.Top="70" Canvas.Left="50"/>
            <Button Name="callElevator" Content="Вызвать лифт" Padding="10" Canvas.Top="100" Canvas.Left="50" Click="callElevatorToFloor"/>
            <StackPanel Canvas.Bottom="20" Canvas.Right="30" Width="150" Name="leftColumn">
               
            </StackPanel>
            <StackPanel Canvas.Bottom="20" Canvas.Right="180" Width="150" Name="rightColumn">
               
            </StackPanel>
        </Canvas>
    </Grid>
</Window>
